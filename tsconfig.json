{
  "compilerOptions": {
    // For CSS module imports (temporary?)
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    // Temporary? For COLOR enum
    "noImplicitAny": false,
    // For CSS module imports (temporary?)
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["**/*.ts", "**/*.js"]
}
